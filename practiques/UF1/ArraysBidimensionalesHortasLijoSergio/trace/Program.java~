public class Program {
    
    /**
     * 
     * @param args not used
     * 
     */
    public void trace (int[][]a) {
        
        System.out.print("\n\n TRACE \n\n");        
        // Primero hacemos un recorrido anidado de la matriz
        for (int i = 0; i < a.length; i++) {
            for (int j = 0; j < a.length; j++) {
                // Aqui printamos con la condicion de que coincidan en la misma posicion (para la diagonal)
                if (i == j) {
                    System.out.printf("%d",a[i][j]);
                }
            }
        }        
    }
}
