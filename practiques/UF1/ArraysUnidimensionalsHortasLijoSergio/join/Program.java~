public class Program {
    
    /**
     * 
     * @param args not used
     * 
     */
    public int[] join(int[] a, int[] b) {
        int i = 0;
        int contadorSuma = 0;
        int[] suma;
        suma = new int[a.length + b.length];   
        System.out.print("\n\n JOIN \n\n");        
        // Iniciamos un recorrido del array, buscando pares mayores a 50
        for (int x : a) {
            suma[contadorSuma] = a[i]
            contadorSuma++;
            i++;
        }
        i = 0;
        for (int x : b) {
            suma[contadorSuma] = b[i]
            contadorSuma++;
            i++;
        }
        return suma;
    }
}
