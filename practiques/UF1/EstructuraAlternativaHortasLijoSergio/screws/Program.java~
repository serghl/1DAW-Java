public class Program {
    
    public String screwSize(double s){
        String size;
        // Ejecutamos el ciclo        
        if (s >= 1 && s < 3) {
            size = "Petit";
        } else if (s >= 3 && s < 5){
            size = "Mitjá";
        } else if (s >= 5 && s < 6.5){
            size = "Gran";
        } else if (s >= 6.5 && s < 8.5){
            size = "Molt gran";
        } else {
            size = "Ese tamaño no existe"
        }
        return size;
    }
}