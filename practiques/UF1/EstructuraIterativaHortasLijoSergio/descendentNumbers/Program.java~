public class Program { 
    
    /** 
     * Escribe una secuencia entre n1 y n2
     *  
     * @param n1 an int 
     * @param n2 an int 
     */ 
    public void writeDescNumbers(int n1, int n2) { 
        int i; 
        i = n2; 
        while (i >= n1) { 
            // Aqui en diferentes lineas
            System.out.println(i + " "); 
            i--; 
        }
    }
    public void writeDescNumbers2(int n1, int n2) { 
        for (int i = n2; i >= n1 ; i--) { 
            // Aqui los imprimimos en una misma linea, con espacios
            System.out.print(i + " "); 
        }
    }
}