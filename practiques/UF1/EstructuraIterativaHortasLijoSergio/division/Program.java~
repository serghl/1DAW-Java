public class Program { 
    
    /** 
     * @n1 an int to be add
     *  
     */ 
    public String divide(int n1, int n2) {
        int cociente;
        int residuo;
        int temporal = n1;
        for (i = 0 ; i <= n2; i++) {
            temporal = temporal - n1;
    }
        residuo = n1 - temporal;
        return "El cociente es "+ cociente +" y el residuo es " + residuo;    
    }
}




