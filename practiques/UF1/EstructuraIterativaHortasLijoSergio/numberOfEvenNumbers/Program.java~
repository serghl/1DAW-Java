public class Program { 
    
    /** 
     * Escribe una secuencia entre n1 y n2
     *  
     * @param n1 an int 
     * @param n2 an int 
     */ 
   
    public void numberOfEvenNumbers(int n1, int n2) { 
        int pair;
        for (int i = n1; i > n2 ; i++) { 
            // Aqui los imprimimos en una misma linea, con espacios
            pair = i / 2; 
        }
        System.out.Printf("El numero de parejas en el intervalo es %d", pair);
    }
}