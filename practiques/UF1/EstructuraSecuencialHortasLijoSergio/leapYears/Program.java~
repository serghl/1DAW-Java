public class Program {
    
    /**
     * @params day an int
     * @params month an int
     * @params year an int
     * @return if is valid
     * 
     */
    public boolean isDate (int day, int month, int year) {
        boolean dayValid = day >= 1 && day <= 31 && (month == 1 || month == 3 || month == 5 || month == 7
         || month == 8 || month == 10 || month == 12) || day >= 1 && day <= 30 && (month == 4 || month == 6
           || month == 9 || month == 11);
        
    }
}