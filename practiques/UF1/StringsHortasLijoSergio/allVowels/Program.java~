public class Program {
    
    /**
     * 
     * @param str an String
     * 
     * @return a boolean
     */
    
    public boolean allVowels(String str) {
        String stringLower = str.toLowerCase();
        String vowelsString = "aeiou";
        int longitud = str.length(); 
        int i = 0;
        System.out.print("\n\n ALL VOWELS \n\n");                
        // Con un bucle buscamos la vocal y la asignamos, parando el bucle al encontrar la primera
       char vowel = stringLower.charAt(i);
        while ( i < longitud ) {  
            if (vowel == 'a' || vowel == 'e' || vowel == 'i' ||
                vowel == 'o' || vowel == 'u') {
                vowelsString -= stringLower.charAt(i);
                System.out.print(vowels);                          
            }
        }        
    }
}


